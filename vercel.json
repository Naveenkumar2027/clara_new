{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/appointment-frontend/(.*)", "destination": "/public/appointment-frontend/$1" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "redirects": [
    { "source": "/", "destination": "/public/index.html", "permanent": false }
  ]
}
